<Window x:Class="WpfApp5.AuthorizationWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Authorization" Height="300" Width="400">
    <Grid>
        <TextBlock Text="Логин" Margin="10,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Name="UsernameTextBox" Width="250" Height="30" Margin="80,40,70,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <TextBlock Text="Пароль" Margin="10,100,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <PasswordBox Name="PasswordBox" Width="250" Height="30" Margin="80,100,70,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Name="LoginButton" Content="Войти" Width="100" Height="30" Margin="150,160,150,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="LoginButton_Click"/>
    </Grid>
</Window>
    